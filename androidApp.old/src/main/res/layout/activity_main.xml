<!-- The LinearLayout class arranges its children in a single column/row (orientation).-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.sample.foo.simplewebapi.MainActivity">
    <!-- ^ activity this layout is associated with; in the tool, we need to know this mapping to drive certain features -->

    <!-- EditText: where person's email address is input -->
    <EditText
        android:id="@+id/emailText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android.inputType="textEmailAddress"
        android.hint="Enter email address"/>
  
    <!-- Button: how we send the API query -->
    <Button
        android:id="@+id/queryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:text="Search" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center" >
    
        <!-- ProgressBar:
        Becomes visible when search button clicked
        Indeterminate = cyclic without indication of progress.
        Disappears when data about to be displayed -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:layout_centerHorizontal="true"
            android:visibility="gone"/>
        
      <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        
            <!-- TextView displays received JSON string-->
            <TextView
                android:id="@+id/responseView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </ScrollView>
    </RelativeLayout>
  
</LinearLayout>